<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Explore Categories: <%= categoryName %></title> <!-- This will now correctly display the category name -->
  <style>
    .category-cards {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }
    .card {
      width: 200px;
      border: 1px solid #ddd;
      padding: 10px;
      text-align: center;
      border-radius: 10px;
    }
    .card-img-top {
      width: 100%;
      height: auto;
      border-radius: 10px;
    }
    .card-body {
      padding: 10px;
    }
    .card-title {
      font-size: 18px;
      font-weight: bold;
    }
    .card-text {
      font-size: 14px;
      color: gray;
    }
  </style>
</head>
<body>
  <h1>Explore Categories: <%= categoryName %></h1> <!-- Display the category name here -->

  <div class="category-cards">
    <% if (workersInCategory.length > 0) { %>
      <% workersInCategory.forEach(worker => { %>
        <div class="card">
          <img src="<%= worker.imageUrl %>" class="card-img-top" alt="<%= worker.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= worker.name %></h5>
            <p class="card-text"><%= worker.title %></p>
            <p><%= worker.category %></p>
            <a href="#" class="btn btn-primary">View Details</a>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p>No workers found in this category.</p>
    <% } %>
  </div>
</body>
</html>
